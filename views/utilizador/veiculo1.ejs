<!doctype html>
<html lang="en">
 <%- include('partials/head') %> 
  <body class="vertical  light  ">
    <div class="wrapper">
      <%- include('partials/navbar') %> 
      <%- include('partials/sidebar') %> 
      <main role="main" class="main-content">
        <div class="container-fluid">
          <div class="row justify-content-center">
            <div class="col-12">
              <div class="row align-items-center mb-4">
                <div class="col">
                  <h2 class="h5 page-title"><small class="text-muted text-uppercase">Relatório</small><br />#<%=veiculo.id %> </h2>
                </div>
                <% if(apolice != undefined){%> 
                 <div class="col-auto">
                  <a href="/apolicepdf/<%= apolice.id %> ">
                  <button type="button" class="btn btn-secondary">Apolice</button>
                </a>
                <a href="/comprovantepdf/<%= apolice.id %>">
                  <button type="button" class="btn btn-danger">Comprovativo</button>
                </a>
                </div>            
                <%} else{%> 
                  <div class="col-auto">
                    <i class="fe fe-flag mr-2"></i> <span class="badge badge-pill badge-warning text-white"> Sem Apolice</span>
                    <a href="/novoApolice/<%=veiculo.matricula %>">
                     <button class="btn btn-primary">Criar Apolice</button>
                    </a>
                   
                  </div> 
                 
                  <%  }%> 
               
              </div> <!-- .row -->
              <div class="row my-4">
                <div class="col-md-12">
                  <div class="card shadow mb-4">
                    <div class="card-header">
                      <strong class="card-title">Detalhes da Viatura.</strong>
                     
                    </div>
                    <div class="card-body">
                      <dl class="row align-items-center mb-0">
                        <dt class="col-sm-2 mb-3 text-muted">Matricula</dt>
                        <dd class="col-sm-4 mb-3">
                          <strong><%=veiculo.matricula %></strong>
                        </dd>
                        <dt class="col-sm-2 mb-3 text-muted">Marca</dt>
                        <dd class="col-sm-4 mb-3">
                          <strong><%=veiculo.marca %></strong>
                        </dd>
                      </dl>
                      <dl class="row mb-0">
                        <dt class="col-sm-2 mb-3 text-muted">Modelo</dt>
                        <dd class="col-sm-4 mb-3"><%=veiculo.modelo %></dd>
                        <dt class="col-sm-2 mb-3 text-muted">Cor</dt>
                        <dd class="col-sm-4 mb-3"><%=veiculo.cor %></dd>
                        <dt class="col-sm-2 mb-3 text-muted">Cilindragem</dt>
                        <dd class="col-sm-4 mb-3">
                          <span class="badge badge-pill badge-danger"><%=veiculo.cilindragem %></span>
                         
                        </dd>
                        <dt class="col-sm-2 mb-3 text-muted">Nº Cilindro</dt>
                        <dd class="col-sm-4 mb-3">
                          <span class="dot dot-md bg-warning mr-2"></span> <%=veiculo.numero_cilindro %> <div class="dropdown d-inline">
                          
                          </div>
                        </dd>
                        <dt class="col-sm-2 mb-3 text-muted">Created On</dt>
                        <dd class="col-sm-4 mb-3"><%=veiculo.createdAt %></dd>
                        <dt class="col-sm-2 mb-3 text-muted">Ultima atualização</dt>
                        <dd class="col-sm-4 mb-3"><%=veiculo.updatedAt %></dd>
                        <dt class="col-sm-2 text-muted">Registrado pelo/a</dt>
                        <dd class="col-sm-10"> <%=veiculo.cliente.name %></dd>
                      </dl>
                    </div> <!-- .card-body -->
                  </div> <!-- .card -->
                 
                </div> <!-- .col-md -->
              
                
             <!-- .col-md -->
            </div>
          </div> <!-- .col-12 -->
        </div> <!-- .row -->
    </div> <!-- .container-fluid -->
  
    </main> <!-- main -->
    </div> <!-- .wrapper -->
    <script src="/Dash/js/jquery.min.js"></script>
    <script src="/Dash/js/popper.min.js"></script>
    <script src="/Dash/js/moment.min.js"></script>
    <script src="/Dash/js/bootstrap.min.js"></script>
    <script src="/Dash/js/simplebar.min.js"></script>
    <script src='/Dash/js/daterangepicker.js'></script>
    <script src='/Dash/js/jquery.stickOnScroll.js'></script>
    <script src="/Dash/js/tinycolor-min.js"></script>
    <script src="/Dash/js/config.js"></script>
    <script src='/Dash/js/jquery.mask.min.js'></script>
    <script src='/Dash/js/select2.min.js'></script>
    <script src='/Dash/js/jquery.steps.min.js'></script>
    <script src='/Dash/js/jquery.validate.min.js'></script>
    <script src='/Dash/js/jquery.timepicker.js'></script>
    <script src='/Dash/js/dropzone.min.js'></script>
    <script src='/Dash/js/uppy.min.js'></script>
    <script src='/Dash/js/quill.min.js'></script>
    <script src="/sweetalert/sweetalert2.all.min.js"></script>
   
    <script src="/Dash/js/apps.js"></script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-56159088-1"></script>
    <script> 
      function si(id){
      
          
      Swal.fire({
        title: 'Tens a certeza que deseja executar esta acção?',
      icon:'warning',
        showCancelButton: true,
        confirmButtonColor:'#3085d6',
        cancelButtonColor:'#d33',
        confirmButtonText: 'Confirmar',
      
      }).then((result) => {
        /* Read more about isConfirmed, isDenied below   */
        if (result.isConfirmed) {
      
         window.location = '/sinistroIntegral/'+id;
        } else if (result.isDenied) {
          Swal.fire('Erro ao eliminar', '', 'info')
        }
      })
        }
      
        function pt(id){
      
          
      Swal.fire({
        title: 'Tens a certeza que deseja executar esta acção?',
      icon:'warning',
        showCancelButton: true,
        confirmButtonColor:'#3085d6',
        cancelButtonColor:'#d33',
        confirmButtonText: 'Confirmar',
      
      }).then((result) => {
        /* Read more about isConfirmed, isDenied below   */
        if (result.isConfirmed) {
      
         window.location = '/perdaTotal/'+id;
        } else if (result.isDenied) {
          Swal.fire('Erro ao eliminar', '', 'info')
        }
      })
        }
      </script>
  </body>
</html>