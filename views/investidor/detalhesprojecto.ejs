<!doctype html>
<html lang="en">
 <%- include('partials/head') %> 
  <body class="vertical  light  ">
    <div class="wrapper">
      <%- include('partials/navbar') %> 
      <%- include('partials/sidebar') %> 
      <main role="main" class="main-content">
        <div class="container-fluid">
          <div class="row justify-content-center">
            <div class="col-12">
              <div class="row align-items-center mb-4">
                <div class="col">
                  <h2 class="h5 page-title"><small class="text-muted text-uppercase">Detalhes*</small><br /># <%= projecto.idProjecto %> </h2>
                </div>
              
                  
                  <% if(iv== undefined){%> 
                    <div class="col-auto">
                      <i class="fe fe-flag mr-2"></i> <span class="badge badge-pill badge-success text-white"> Participar da Roda</span>
                      <button type="button" class="btn mb-2 btn-outline-secondary" data-toggle="modal" data-target="#varyModal" data-whatever="@mdo">+ Participar</button>
                    </div> 
                    <%} else{%> 
                      <div class="col-auto">
                        <i class="fe fe-flag mr-2"></i> <span class="badge badge-pill badge-success text-white"> Estas A Investir Com: <%= iv.valorInvestir %> Kz </span>
                        
                    
                      </div> 
                      <%}%> 
                 
               
              </div> <!-- .row -->
              <div class="row my-4">
                <div class="col-md-12">
                  <div class="card shadow mb-4">
                    <div class="card-header">
                      <strong class="card-title">Detalhes do Investimento.</strong>
                     
                    </div>
                    <div class="card-body">
                      <dl class="row align-items-center mb-0">
                        <dt class="col-sm-2 mb-3 text-muted">Investidores</dt>
                        <dd class="col-sm-4 mb-3">
                          <strong><%= invetimentos.length %>  </strong>
                        </dd>
                        <dt class="col-sm-2 mb-3 text-muted">Valor Necessitado</dt>
                        <dd class="col-sm-4 mb-3">
                          <strong><%= projecto.valorInvestir %>  Kz </strong>
                        </dd>
                      </dl>
                      <dl class="row mb-0">
                        <dt class="col-sm-2 mb-3 text-muted">Empresa</dt>
                        <dd class="col-sm-4 mb-3"> </dd>
                        <dt class="col-sm-2 mb-3 text-muted">Cor</dt>
                        <dd class="col-sm-4 mb-3"> </dd>
                        <dt class="col-sm-2 mb-3 text-muted">Cilindragem</dt>
                        <dd class="col-sm-4 mb-3">
                          <span class="badge badge-pill badge-danger"> </span>
                         
                        </dd>
                        <dt class="col-sm-2 mb-3 text-muted">Nº Cilindro</dt>
                        <dd class="col-sm-4 mb-3">
                          <span class="dot dot-md bg-warning mr-2"></span> <div class="dropdown d-inline">
                          
                          </div>
                        </dd>
                        <dt class="col-sm-2 mb-3 text-muted">Created On </dt>
                        <dd class="col-sm-4 mb-3"></dd>
                        <dt class="col-sm-2 mb-3 text-muted">Ultima atualização</dt>
                        <dd class="col-sm-4 mb-3"> </dd>
                        <dt class="col-sm-2 text-muted">Gráfico de Rodada</dt>
                        <dd class="col-sm-10"> </dd>
                        <div class="flex-fill chart-box mt-n2">
                          <canvas id="myChart4" style="min-height: 80px; height: 150px; max-height: 150px; max-width: 40%;"></canvas>
                        </div>
                      </dl>
                    </div> <!-- .card-body -->
                  </div> <!-- .card -->
                 
                </div> <!-- .col-md -->
              
                
                
           
            </div>
            
          </div> <!-- .col-12 -->
        </div> <!-- .row -->
    </div> <!-- .container-fluid -->
    <div class="modal fade" id="varyModal" tabindex="-1" role="dialog" aria-labelledby="varyModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="varyModalLabel">Investir</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form method="post" action="/investir">
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Descrição:</label>
                <textarea name="descricao" id="" cols="30" rows="10" class="form-control"></textarea>
                
              </div>
              <div class="form-group">
                <label for="message-text" class="col-form-label">Valor:<%= maior %>  </label>
                <input type="number" name="valorInvestir" class="form-control" min="0" max='<%- maior %>'>
                <input type="hidden" value="<%= projecto.idProjecto %> " name="idProjectoEmpresa" class="form-control">
                
              </div>
              
            
          </div>
          <div class="modal-footer">
            <button type="button" class="btn mb-2 btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn mb-2 btn-primary">Investir</button>
          </div>
        </form>
        </div>
      </div>
    </div>
  
    </main> <!-- main -->
    </div> <!-- .wrapper -->
    <script src="/Dash/js/jquery.min.js"></script>
    <script src="/Dash/js/popper.min.js"></script>
    <script src="/Dash/js/moment.min.js"></script>
    <script src="/Dash/js/bootstrap.min.js"></script>
    <script src="/Dash/js/simplebar.min.js"></script>
    <script src='/Dash/js/daterangepicker.js'></script>
    <script src='/Dash/js/jquery.stickOnScroll.js'></script>
    <script src="/Dash/js/tinycolor-min.js"></script>
    <script src="/Dash/js/config.js"></script>
    <script src='/Dash/js/jquery.mask.min.js'></script>
    <script src='/Dash/js/select2.min.js'></script>
    <script src='/Dash/js/jquery.steps.min.js'></script>
    <script src='/Dash/js/jquery.validate.min.js'></script>
    <script src='/Dash/js/jquery.timepicker.js'></script>
    <script src='/Dash/js/dropzone.min.js'></script>
    <script src='/Dash/js/uppy.min.js'></script>
    <script src='/Dash/js/quill.min.js'></script>
    <script src="/Dash/js/Chart.min.js"></script>
    <script src="/sweetalert/sweetalert2.all.min.js"></script>
   
    <script src="/Dash/js/apps.js"></script>
